{
  "name": "Messaging Extension",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
    "matches": ["*://*/*"],
    "js": [
        "content.js"
    ],
    "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ]
}